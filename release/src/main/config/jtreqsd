# This script changes the administrative status of the application, and
# starts it or stops it if necessary.
# The administrative status is the existence of a file.
#
# @author Jonathan Schaeffer
# @author Andres Gomez
# @author Pierre-Emmanuel Brinette


# Sets the environment.
export JAVA_HOME=${JAVA_HOME:-/usr/java/jdk1.6.0_22}
export HPSS_ROOT=${HPSS_ROOT:-/opt/hpss}
export JTREQS_INSTALL_DIR=${JTREQS_INSTALL_DIR:-/opt/jtreqs}

JTREQS_USER=treqs
PAGSH_PFIX="/usr/afsws/bin/pagsh -c"
PROG=jtreqs2
# File for the administrative status.
PID_FILE=/var/lock/subsys/jtreqs.id
JTREQS_PID=`ps -eo pid,user,args | grep -v grep | grep ${PROG} | sed 's/^ *//' | cut -f1 -d" "`
LOG_FILE=/var/log/jtreqs/jtreqs-console.log

# For SELinux we need to use 'runuser' not 'su'
if [ -x /sbin/runuser ]
then
  SU=runuser
else
  SU=su
fi

# Source function library.
. /etc/rc.d/init.d/functions

start(){
  RETVAL=0
  echo $"Starting jTReqS: "
  # Administrative status.
  touch ${PID_FILE}
  if [ -z ${JTREQS_PID} ]; then
    echo su ${JTREQS_USER} -c "${PAGSH_PFIX} ${JTREQS_INSTALL_DIR}/etc/registerInfo.sh &" >> ${LOG_FILE}
    echo su ${JTREQS_USER} -c "${PAGSH_PFIX} ${JTREQS_INSTALL_DIR}/bin/jtreqs.sh --config ${JTREQS_INSTALL_DIR}/etc/jtreqs.conf.properties &" >> ${LOG_FILE}
    RETVAL=$?
  else
    echo -n "jTReqS already running (pid: ${JTREQS_PID})"
  fi
  echo
  return ${RETVAL}
}

stop(){
  echo -n $"Stopping jTReqS: "
  killproc ${PROG} -TERM
  RETVAL=$?
  sleep 5
  killproc ${PROG} > /dev/null 2>&1
  echo
  # Administrative status.
  rm -f ${PID_FILE}
  return ${RETVAL}
}

# Sums the quantity of jtreqs processes.
status(){
  numproc=`ps -ef | grep -v grep | grep ${PROG} | wc -l`
  if [ $numproc -gt 0 ]; then
    echo "jTReqS is started."
  else
    echo "jTReqS is stopped."
  fi
}

restart(){
  stop
  start
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  status)
    status
    ;;
  restart)
    restart
    ;;
  *)
    echo $"Usage: $0 {start|stop|status|restart}"
    exit 1
esac

exit ${RETVAL}
