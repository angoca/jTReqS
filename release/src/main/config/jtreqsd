# Sets the environment.
export JAVA_HOME=${JAVA_HOME:-/usr/java/jdk1.6.0_22}
export HPSS_ROOT=${HPSS_ROOT:-/opt/hpss}
export JTREQS_INSTALL_DIR=${JTREQS_INSTALL_DIR:-/opt/jtreqs}

JTREQS_USER=treqs
PAGSH_PFIX="/usr/afsws/bin/pagsh -c"
PROG=jtreqs2
JTREQS_PID=`ps -eo pid,user,args | grep ${PROG} | sed 's/^ *//' | cut -f1 -d" "`

# For SELinux we need to use 'runuser' not 'su'
if [ -x /sbin/runuser ]
then
  SU=runuser
else
  SU=su
fi

# Source function library.
. /etc/rc.d/init.d/functions

start(){
  RETVAL=0
  echo -n $"Starting jTReqS: "
  touch /var/lock/subsys/jtreqs.id
#  if [ -z ${JTREQS_PID} ]; then
    echo su ${JTREQS_USER} -c "${PAGSH_PFIX} ${JTREQS_INSTALL_DIR}/etc/registerInfo.sh &" >> /var/log/jtreqs/jtreqs-console.log
    echo su ${JTREQS_USER} -c "${PAGSH_PFIX} ${JTREQS_INSTALL_DIR}/bin/jtreqs.sh --config ${JTREQS_INSTALL_DIR}/etc/jtreqs.conf.properties &" >> /var/log/jtreqs/jtreqs-console.log
    RETVAL=$?
    [ ${RETVAL} = 0 ] && success start || failure start
#  else
#    echo -n "jTReqS already running (pid: ${JTREQS_PID})"
#    failure start
#  fi
  return ${RETVAL}
}

stop(){
  echo -n $"Stopping jTReqS: "
  killproc ${PROG} -TERM
  RETVAL=$?
  sleep 5
  killproc ${PROG} > /dev/null 2>&1
  echo
  rm -f /var/lock/subsys/jtreqs.id
  return ${RETVAL}
}

# Sums the quantity of jtreqs processes.
status(){
  numproc=`ps -ef | grep ${PROG} | wc -l`
  if [ $numproc -gt 1 ]; then
    echo "jTReqS is running, but multiple instance (weird)."
  elif [ $numproc -eq 0 ]; then
    echo "jTReqS is running. pid: " ${JTREQS_PID}
  else
    echo "jTReqS is stopped."
  fi
}

restart(){
  stop
  start
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  status)
    status
    ;;
  restart)
    restart
    ;;
  *)
    echo $"Usage: $0 {start|stop|status|restart}"
    exit 1
esac

exit ${RETVAL}
